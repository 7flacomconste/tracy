{
  "name": "Tracy",
  "description":
    "A tool designed to assist with finding all sinks and sources of a web application and display these results in a digestible manner.",
  "version": "0.6.2",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "storage",
    "contextMenus",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "browsingData"
  ],
  "background": {
    "scripts": ["tracy/scripts/replace.js", "tracy/scripts/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://localhost/*", "*://127.0.0.1/*"],
      "all_frames": true,
      "js": [
        "tracy/scripts/util.js",
        "tracy/scripts/highlight.js",
        "tracy/scripts/replace.js",
        "tracy/scripts/form-mod.js",
        "tracy/scripts/dom-mutations.js",
        "tracy/scripts/method-hooking-injector.js"
      ],
      "css": ["tracy/css/dropdown.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://localhost/*", "*://127.0.0.1/*"],
      "all_frames": true,
      "js": ["tracy/scripts/util.js", "tracy/scripts/installed.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "Tracy",
    "default_icon": {
      "16": "tracy/images/tracy_16x16.png",
      "48": "tracy/images/tracy_48x48.png",
      "96": "tracy/images/tracy_96x96.png",
      "128": "tracy/images/tracy_128x128.png"
    }
  },
  "web_accessible_resources": [
    "tracy/scripts/replace.js",
    "tracy/scripts/xhr-mod.js",
    "tracy/scripts/fetch-mod.js",
    "tracy/scripts/inner-html-mod.js",
    "tracy/scripts/repro.js",
    "tracy/scripts/worker.js",
    "tracy/scripts/method-hooking.js",
    "tracy/images/tracy_svg.svg",
    "tracy/html/index.html",
    "tracy/html/page-proxy.html"
  ],
  "manifest_version": 2,
  "options_ui": {
    "page": "tracy/html/options.html",
    "chrome_style": true,
    "open_in_tab": false
  },
  "icons": {
    "16": "tracy/images/tracy_16x16.png",
    "48": "tracy/images/tracy_48x48.png",
    "96": "tracy/images/tracy_96x96.png",
    "128": "tracy/images/tracy_128x128.png"
  }
}
